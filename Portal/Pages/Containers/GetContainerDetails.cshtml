@page "/Containers/GetContainerDetails/{exerciseName}"
@model MyApp.Namespace.GetContainerDetailsModel
@using System.Reflection
@using MyApp.Namespace
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Container Details";
}

<h1>Container Details</h1>

@if (Model.Container != null)
{

    <div style="margin: 20px 0; padding: 20px; border: 1px solid #ddd; border-radius: 5px;">
    <h2>Container Information</h2>
    <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
        <thead>
            <tr>
                <th style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">Property</th>
                <th style="text-align: left; padding: 8px; border-bottom: 1px solid #ddd;">Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.Container)
                {
                    <tr>
                        <td style="padding: 8px; border-bottom: 1px solid #ddd;">@entry.Key</td>
                        <td style="padding: 8px; border-bottom: 1px solid #ddd;">@entry.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @* add button redircet to the IDE continer page with title don't have ide try the online one *@
  <button class="btn btn-outline-primary" onclick="window.location.href='/Containers/ContainerIDE'">Try the Online IDE</button>


}
else
{
    <div style="margin: 20px 0; padding: 20px; border: 1px solid #f44336; border-radius: 5px; background-color: #ffecec;">
    <h2 style="color: #f44336;">Error</h2>
    <p>Container details could not be found. Please check the container ID and try again.</p>
</div>
}
