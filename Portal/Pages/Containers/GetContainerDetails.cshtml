@page "/Containers/GetContainerDetails/{exerciseName}"
@model MyApp.Namespace.GetContainerDetailsModel
@using System.Reflection
@using MyApp.Namespace
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Server Details";
}

<div style="font-family: 'Roboto', sans-serif; max-width: 900px; margin: 0 auto; padding: 30px;">
    <div style="text-align: center; margin-bottom: 30px;">
        <h1 style="font-size: 2.8em; color: #2F4F4F; margin-bottom: 10px;">🔍 Server Details</h1>
    </div>

    @if (Model.Container != null)
    {
        <div style="background: linear-gradient(to right, #e6f7ff, #f6f6ff); border-radius: 15px; padding: 20px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);">
            <h2 style="font-size: 1.8em; color: #333; margin-bottom: 15px;"> Your Server is Ready!</h2>
            <p style="font-size: 1em; color: #555; margin-bottom: 20px; line-height: 1.6;">
                Use these server details in your code or API calls to interact seamlessly
            </p>
            
            <table style="width: 100%; border-collapse: collapse; margin: 20px 0; font-size: 1.1em; color: #333;">
                <thead>
                    <tr style="background-color: #6A5ACD; color: white; text-align: left;">
                        <th style="padding: 15px; border-radius: 8px 0 0 8px;">Property</th>
                        <th style="padding: 15px; border-radius: 0 8px 8px 0;">Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.Container)
                    {
                        <tr style="background-color: #f9f9f9; border-bottom: 1px solid #ddd;">
                            <td style="padding: 12px; font-weight: bold; color: #2F4F4F;">@entry.Key</td>
                            <td style="padding: 12px; color: #4B0082; word-break: break-word;">@entry.Value</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div style="text-align: center; margin-top: 30px;">
                <button class="btn btn-primary" 
                        style="background-color: #6A5ACD; border: none; padding: 15px 25px; font-size: 1.1em; color: white; border-radius: 8px; cursor: pointer; transition: all 0.3s ease;"
                        onmouseover="this.style.backgroundColor='#483D8B';" 
                        onmouseout="this.style.backgroundColor='#6A5ACD';"
                        onclick="window.location.href='/Containers/ContainerIDE'">
                    🌐 Don't Have an IDE? Try the Online One!
                </button>
            </div>
        </div>
    }
    else
    {
        <!-- Error Section -->
        <div style="background: linear-gradient(to right, #ffcccc, #ffe6e6); border-radius: 15px; padding: 20px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);">
            <h2 style="font-size: 1.8em; color: #D8000C; margin-bottom: 15px;">⚠️ Server Details Not Found</h2>
            <p style="font-size: 1em; color: #555; line-height: 1.6;">
                Oops! We couldn't fetch your server details. Please ensure the container is active or restart the exercise. 
                If the issue persists, contact support.
            </p>
        </div>
    }
</div>