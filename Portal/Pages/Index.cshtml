@page
@model Portal.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Portal</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/homePage.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="display-4">Welcome @Model.UserName</h1>
       @* display ex details   *@

            <div class="exercise-list-container">
                <h1 class="exercise-list-title">Exercise List</h1>
                <table class="exercise-table">

                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Difficulty</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var exercise in Model.Exercises)
                        {
                            <tr>
                                <td>@exercise.ExerciseTile</td>
                                <td>@exercise.ExerciseDescription</td>
                                <td>@exercise.ExerciseDifficulty</td>
                                <td class="exercise-actions">
                                    <form method="post" asp-page-handler="DeployInstance">
                                        <input type="hidden" name="ExerciseName" value="@exercise.ExerciseName" />
                                        <button class="btn-start" type="submit">Start</button>
                                    </form>
                                    <form method="post" asp-page-handler="StopInstance">
                                        <input type="hidden" name="ExerciseName" value="@exercise.ExerciseName" />
                                        <button class="btn-stop" type="submit">Stop</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- JavaScript Dependencies: move any inline JavaScript to a separate file -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
                integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-pzjw8f+ua7Kw1TIqE7anJf6b3zH5pbeVxknzYlbR5STIbYQb6P6afkFeJQuo5eNm"
                crossorigin="anonymous"></script>
            <script src="~/js/site.js"></script> <!-- Custom JavaScript file -->

</body>
@*  add inline js do alert  *@
<script>
    @* alert("Take Care inline js is not good practice"); *@
</script>

</html>
