@page
@model Portal.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Welcome!!</h1>
    </div>

    <!-- User Input Form -->
    <div class="row justify-content-center mb-5">
        <div class="col-md-6">
            <form method="post" class="form-inline justify-content-center">
                <div class="form-group mb-2 mr-2">
                    <label for="name" class="sr-only">Name</label>
                    <input type="text" id="name" name="Name" class="form-control" placeholder="Enter your name" />
                </div>
                <button type="submit" class="btn btn-primary mb-2">Click me</button>
            </form>
        </div>
    </div>

    <!-- Display Greeting -->
    @if (!string.IsNullOrEmpty(Model.Name))
    {
        <div class="row justify-content-center mb-4">
            <div class="col-md-6">
                <div class="alert alert-success text-center" role="alert">
                    <h2>Hello, @Model.Name!</h2>
                </div>
            </div>
        </div>
    }

    <!-- Display Containers List -->
    @if (Model.Containers != null && Model.Containers.Any())
    {
        <div class="row">
            <div class="col-12">
                <h2 class="mb-3">Server Instances</h2>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Instance ID</th>
                                <th>Server Type</th>
                                <th>Status</th>
                                <th>IP Address</th>
                                <th>Port</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var container in Model.Containers)
                            {
                                <tr>
                                    <td>@container.InstanceId</td>
                                    <td>@container.ServerType</td>
                                    <td>
                                        @container.Status
                                    </td>
                                    <td>@container.IpAddress</td>
                                    <td>@container.Port</td>
                                    <td>@container.Created.ToString("g")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info text-center" role="alert">
                    No server instances available.
                </div>
            </div>
        </div>
    }
</div>

<!-- Optional: Add some custom styles for better presentation -->
<style>
    .table thead th {
        vertical-align: middle;
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
        text-align: center;
    }
</style>